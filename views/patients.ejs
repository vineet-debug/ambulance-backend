<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Manage Patients</title>

  <!-- AdminLTE + Bootstrap 4 -->
  <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
  <!-- DataTables -->
  <link rel="stylesheet"
        href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>

<body class="hold-transition">
  <div class="wrapper">
    <%- include('sidebar') %>

    <div class="content-wrapper">
      <div class="content-header py-2">
        <div class="container-fluid"><h1 class="m-0">Registered Patients</h1></div>
      </div>

      <section class="content pt-0">
        <div class="container-fluid">

          <% if (success && success.length) { %>
            <div class="alert alert-success mb-2"><%= success[0] %></div>
          <% } %>
          <% if (error && error.length) { %>
            <div class="alert alert-danger mb-2"><%= error[0] %></div>
          <% } %>

          <!-- Filter (unchanged) -->
          <div class="card card-filter">
            <div class="card-body py-2">
              <form class="form-inline" method="GET" action="/admin/patients">
                <input class="form-control mr-2" name="name"  placeholder="Name"
                       value="<%= query?.name || '' %>">
                <input class="form-control mr-2" name="email" placeholder="Email"
                       value="<%= query?.email || '' %>">
                <select class="form-control mr-2" name="gender">
                  <option value="">All Genders</option>
                  <option value="Male"   <%= query?.gender==='Male'   ? 'selected':'' %>>Male</option>
                  <option value="Female" <%= query?.gender==='Female' ? 'selected':'' %>>Female</option>
                </select>
                <button class="btn btn-primary">
                  <i class="fas fa-filter mr-1"></i>Filter
                </button>
              </form>
            </div>
          </div>

          <!-- Patient list -->
          <div class="card mb-4">
            <div class="card-header py-2"><h3 class="card-title mb-0">Patient List</h3></div>
            <div class="card-body table-responsive p-0">
              <table id="patientsTable" class="table table-striped table-hover text-nowrap">
                <thead>
                  <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Gender</th>
                    <th>Status</th>
                    <th>Registered</th>          <!-- NEW -->
                    <th class="text-right">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% patients.forEach(p => { %>
                    <tr>
                      <td><%= p.fullName || 'N/A' %></td>
                      <td><%= p.email    || 'N/A' %></td>
                      <td><%= p.phone    || 'N/A' %></td>
                      <td><%= p.gender   || 'N/A' %></td>
                      <td>
                        <span class="badge <%= p.active ? 'badge-success' : 'badge-secondary' %>">
                          <%= p.active ? 'Active' : 'Inactive' %>
                        </span>
                      </td>
                      <td>
                        <%= p.createdAt
                              ? new Date(p.createdAt).toLocaleString('en-GB', {
                                  day: '2-digit', month: 'short', year: 'numeric',
                                  hour: '2-digit', minute: '2-digit'
                                })
                              : 'N/A' %>
                      </td>
                      <td class="text-right" style="min-width:160px;">
                        <a href="/admin/patients/<%= p._id %>"
                           class="btn btn-info btn-sm mr-1" title="View details">
                          <i class="fas fa-eye"></i>
                        </a>
                        <form action="/admin/patients/toggle/<%= p._id %>" method="POST" class="d-inline">
                          <button class="btn btn-sm <%= p.active ? 'btn-warning' : 'btn-success' %>"
                                  title="<%= p.active ? 'Deactivate' : 'Activate' %>">
                            <i class="<%= p.active ? 'fas fa-user-slash' : 'fas fa-user-check' %>"></i>
                          </button>
                        </form>
                        <form action="/admin/patients/delete/<%= p._id %>" method="POST" class="d-inline"
                              onsubmit="return confirm('Delete <%= p.fullName %>?');">
                          <button class="btn btn-danger btn-sm" title="Delete">
                            <i class="fas fa-trash-alt"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>

        </div><!-- /.container -->
      </section>
    </div><!-- /.content-wrapper -->
  </div><!-- /.wrapper -->

  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>

  <script>
    $(function () {
      $('#patientsTable').DataTable({
        pageLength   : 10,
        lengthChange : false,
        order        : [[5, 'desc']],         // default sort by Registered (col 5)
        columnDefs   : [{ orderable: false, targets: -1 }],
        language     : { paginate: { previous: '&laquo;', next: '&raquo;' } }
      });

      $('.sidebar a[href="' + location.pathname.toLowerCase() + '"]').addClass('active');
    });
  </script>
</body>
</html>
