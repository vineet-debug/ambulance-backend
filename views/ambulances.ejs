<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Ambulances</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body class="hold-transition sidebar-mini">
  <div class="wrapper">
    <!-- sidebar -->
    <%- include('sidebar') %>

    <!-- page content -->
    <div class="content-wrapper">
      <!-- header -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2 align-items-center">
            <div class="col-sm-6">
              <h1>Ambulances</h1>
            </div>
            <div class="col-sm-6 text-right">
              <a href="/admin/addAmbulance" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Add Ambulance
              </a>
            </div>
          </div>
        </div>
      </section>

      <!-- main -->
      <section class="content">
        <div class="container-fluid">
          <!-- filters -->
          <div class="row mb-3">
            <div class="col-sm-4">
              <input type="text" id="searchVehicleNumber" class="form-control"
                     placeholder="Search by Vehicle Number" onkeyup="filterTable()" />
            </div>
            <div class="col-sm-4">
              <input type="text" id="searchModel" class="form-control"
                     placeholder="Search by Model" onkeyup="filterTable()" />
            </div>
            <div class="col-sm-4">
              <select id="searchStatus" class="form-control" onchange="filterTable()">
                <option value="">All Statuses</option>
                <option value="Active">Active</option>
                <option value="Inactive">Inactive</option>
              </select>
            </div>
          </div>

          <!-- table card -->
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-body table-responsive p-0">
                  <table id="ambulancesTable" class="table table-hover text-nowrap">
                    <thead>
                      <tr>
                        <th>Vehicle Number</th>
                        <th>Model</th>
                        <th>Status</th>
                        <th>Driver</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% ambulances.forEach(a => { %>
                        <tr>
                          <td><%= a.vehicleNumber %></td>
                          <td><%= a.vehicleModel %></td>
                          <td>
                            <span class="badge <%= a.isActive ? 'badge-success' : 'badge-danger' %>">
                              <%= a.isActive ? 'Active' : 'Inactive' %>
                            </span>
                          </td>
                          <td>
                            <% if(a.assignedDriver) { %>
                              <a href="/admin/drivers/<%= a.assignedDriver._id %>"><%= a.assignedDriver.fullName %></a>
                            <% } else { %>
                              Not Assigned
                            <% } %>
                          </td>
                          <td>
                            <a href="/admin/ambulances/<%= a._id %>" class="btn btn-info btn-sm">
                              <i class="fas fa-eye"></i>
                            </a>
                            <a href="/admin/editAmbulance/<%= a._id %>" class="btn btn-warning btn-sm">
                              <i class="fas fa-edit"></i>
                            </a>
                            <form action="/admin/deleteAmbulance/<%= a._id %>" method="POST" style="display:inline;">
                              <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i>
                              </button>
                            </form>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    <!-- no footer include -->
  </div>

  <script>
    function filterTable() {
      const vehicleNumber = document.getElementById('searchVehicleNumber').value.toLowerCase();
      const model = document.getElementById('searchModel').value.toLowerCase();
      const status = document.getElementById('searchStatus').value;

      document.querySelectorAll('#ambulancesTable tbody tr').forEach(row => {
        const cols = row.querySelectorAll('td');
        const matchesVehicleNumber = cols[0].innerText.toLowerCase().includes(vehicleNumber);
        const matchesModel = cols[1].innerText.toLowerCase().includes(model);
        const matchesStatus = !status || cols[2].innerText.trim() === status;

        row.style.display = (matchesVehicleNumber && matchesModel && matchesStatus) ? '' : 'none';
      });
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
</body>
</html>
